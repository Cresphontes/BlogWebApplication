<form id="formArticleContent" asp-controller="Admin" asp-action="EditArticleContent" asp-antiforgery="true" method="post" enctype="multipart/form-data">
   
    <h2 class="text text-success" style="font-size:30px;margin-left:30%">@TempData["Message"]</h2>

    <h2 style="font-size:30px;margin-left:32%;padding-bottom:50px">" @Model.Title " Adlı Makalenin İçeriği</h2>
    <input type="hidden" asp-for="Id"/>
       

    <div style="margin-left:33%" class="form-group">
        <div class="col-md-6">
            <label asp-for="Content">İçerik</label>
            <textarea asp-for="Content" id="content" class="form-control" rows="3" data-plugin-maxlength maxlength="500"></textarea>
            <span asp-validation-for="Content" class="text text-danger"></span>
        </div>
    </div>


    <br /><br />

    <button style="display:block;width:400px;margin:auto" type="submit" class="btn btn-lg btn-success">Değiştir</button>

</form>

