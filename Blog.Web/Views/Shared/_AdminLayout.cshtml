@using System.Globalization
@using Microsoft.AspNetCore.Identity.UI.Pages.Internal
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/jquery-ui/css/ui-lightness/jquery-ui-1.10.4.custom.css" />
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/bootstrap-multiselect/bootstrap-multiselect.css" />
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/vendor/morris/morris.css" />
    
    @RenderSection("styles",false);

    <!-- Theme CSS -->
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="/Themes/Admin-panel/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="/Themes/Admin-panel/assets/vendor/modernizr/modernizr.js"></script>


</head>
<body>
    <header class="header">
        <div class="logo-container">
            <a style="margin-left:10px;margin-top:10px" class="logo btn btn-warning" href="/Home/Index/0">
                Web Sitesine Git
            </a>
            <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
            </div>
        </div>

        <!-- start: search & user box -->
        <div class="header-right">

            <form action="pages-search-results.html" class="search nav-form">
                <div class="input-group input-search">
                    <input type="text" class="form-control" name="q" id="q" placeholder="Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>

            <span class="separator"></span>

           

            <div id="userbox" class="userbox">
                <a href="#" data-toggle="dropdown">
                    <figure class="profile-picture">
                        <img src="/Themes/Admin-panel/assets/images/!logged-user.jpg" alt="Joseph Doe" class="img-circle" data-lock-picture="/Themes/Admin-panel/assets/images/!logged-user.jpg" />
                    </figure>
                    <div class="profile-info" data-lock-name="John Doe" data-lock-email="johndoe@JSOFT.com">
                        <span class="name"></span>
                        <span class="role"></span>
                    </div>

                    <i class="fa custom-caret"></i>
                </a>

                <div class="dropdown-menu">
                    <ul class="list-unstyled">
                        <li class="divider"></li>
                        <li>
                            <a asp-action="EditProfile" asp-controller="Account" role="menuitem" tabindex="-1" ><i class="fa fa-user"></i> Profilim</a>
                        </li>
                        <li>
                            <a asp-action="EditPassword" asp-controller="Account" role="menuitem" tabindex="-1" ><i class="fa fa-user"></i> Şifre Değiştir</a>
                        </li>
                        <li>
                            <a asp-action="logout" asp-controller="Account" id="logout" role="menuitem" tabindex="-1"><i class="fa fa-power-off"></i> Çıkış</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!-- end: search & user box -->
    </header>

<section class="inner-wrapper">

    <aside id="sidebar-left" class="sidebar-left">

        <div class="sidebar-header">
            
            <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
            </div>
        </div>

        <div class="nano">
            <div class="nano-content">
                <nav id="menu" class="nav-main" role="navigation">
                    <ul class="nav nav-main">
                        <li class="nav-active">
                            <a asp-action="AdminPanel" asp-controller="Admin">
                                <i class="fa fa-home" aria-hidden="true"></i>
                                <span>Ana Sayfa</span>
                            </a>
                        </li>
                        <li class="nav-active">
                            <a asp-action="CreateArticle" asp-controller="Admin">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                <span>Makale Oluştur</span>
                            </a>
                        </li>
                        <li>
                            <a asp-action="MyArticles" asp-controller="Admin">
                                <i class="fa fa-copy" aria-hidden="true"></i>
                                <span>Makalelerim</span>
                            </a>
                        </li>
                      


                    </ul>
                </nav>

            </div>
        </div>

    </aside>
    <section role="main" class="content-body">
        <header class="page-header">
            
					
            <div class="right-wrapper pull-right">
               
		
            </div>
        </header>
        <div>
            @RenderBody()
        </div>
    </section>
</section>


    <!-- Vendor -->
    <script src="/Themes/Admin-panel/assets/vendor/jquery/jquery.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Specific Page Vendor -->
    <script src="/Themes/Admin-panel/assets/vendor/jquery-ui/js/jquery-ui-1.10.4.custom.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-ui-touch-punch/jquery.ui.touch-punch.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-appear/jquery.appear.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/bootstrap-multiselect/bootstrap-multiselect.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-easypiechart/jquery.easypiechart.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/flot/jquery.flot.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/flot-tooltip/jquery.flot.tooltip.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/flot/jquery.flot.pie.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/flot/jquery.flot.categories.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/flot/jquery.flot.resize.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jquery-sparkline/jquery.sparkline.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/raphael/raphael.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/morris/morris.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/gauge/gauge.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/snap-svg/snap.svg.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/liquid-meter/liquid.meter.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jqvmap/jquery.vmap.js"></script>
    <script src="/Themes/Admin-panel/assets/vendor/jqvmap/data/jquery.vmap.sampledata.js"></script>
    
@RenderSection("scripts", required: false)


<!-- Theme Base, Components and Settings -->
    <script src="/Themes/Admin-panel/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="/Themes/Admin-panel/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="/Themes/Admin-panel/assets/javascripts/theme.init.js"></script>


    <!-- Examples -->
    <script src="/Themes/Admin-panel/assets/javascripts/dashboard/examples.dashboard.js"></script>
    

   



<script>
        $(function () {


            $.ajax({
                type: "GET",
                url: "/Admin/BannerProfile",
                dataType: "json",
                success: function (data) {

                    var a = data.name;
                    var b = a.concat(" " + data.surname);

                    $(".name").text(b);


                }


            });



        })
    </script>
</body>
</html>
